  preg_match('/(Version)[ \/]([\d]+)/', $user_agent, $version);
  if (preg_match('~MSIE|Internet Explorer~i', $user_agent) || (strpos($user_agent, 'Trident/7.0; rv:11.0') !== false) || (stripos( $user_agent, 'Safari') !== false && !strpos($_SERVER['HTTP_USER_AGENT'], 'Chrome') && (empty($version[2]) || (!empty($version[2]) && $version[2] < 9)))){
      $js_not_proper = true;
  }
